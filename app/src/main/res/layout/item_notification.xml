<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="5sp"
    android:elevation="5dp"
    android:id="@+id/item_card_view"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="5sp"
    android:background="@color/whiteCardColor">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/item_layout_view"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="12dp"
            android:id="@+id/card_view_image"
            app:cardCornerRadius="5dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/icons8_chatbot_64"
                android:id="@+id/image_recognize"
                android:layout_alignParentTop="true"
                android:background="@drawable/profile_bk"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_image"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/profilePrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/title" />

        <TextView
            android:id="@+id/time"
            android:text="@string/app_name"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:layout_alignParentEnd="true"
            android:textColor="@color/profileEditTextColor" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>